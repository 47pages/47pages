extends ../layouts/default

block css
	link(href="/styles/css/art_submission.min.css", rel="stylesheet")

block content
	div#container
		div.submission
			if art_submission
				div.submission__header
					h2.submission__title= art_submission.title
					h4.submission__author= art_submission.author.full
						&nbsp;&mdash;&nbsp;
					h4.submission__volume Volume #{art_submission.volumeAssignment.number}
				div.submission__body
					img(src=art_submission.thumbnailSrc).submission__image
			else
				div.no-submission
					h3 Sorry, you have followed an invalid URL.
					p Perhaps this submission has been moved or deleted.